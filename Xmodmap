! Reverse scrolling
pointer = 1 2 3 5 4 6 7 8 9 10 11 12

! Make right control caps-lock, and caps-lock left control
!
remove Lock = Caps_Lock
keysym Caps_Lock = Control_L
add Lock = Caps_Lock
add Control = Control_L

! Fix Meta / Super on OpenSolaris (Alt = Meta, Windows Key = Super)
!
clear mod4
clear mod5
keycode 0x40 = Meta_L
keycode 0x73 = Super_L
add mod4 = Super_L

! Make right alt hyper (mod5)
!
!keycode 0x71 =  Hyper_R
!clear mod5
!add mod5 = Hyper_R
